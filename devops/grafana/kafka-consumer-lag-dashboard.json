{
  "dashboard": {
    "title": "Kafka Consumer Lag",
    "tags": ["kafka", "consumer", "lag"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Consumer Lag by Group and Topic",
        "type": "graph",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "kafka_consumer_lag_sum",
            "legendFormat": "{{consumer_group}} - {{topic}}"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Lag"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Consumer Lag by Partition",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "kafka_consumer_lag",
            "format": "table",
            "legendFormat": ""
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "__name__": true},
              "indexByName": {
                "consumer_group": 0,
                "topic": 1,
                "partition": 2,
                "Value": 3
              },
              "renameByName": {
                "consumer_group": "Consumer Group",
                "topic": "Topic",
                "partition": "Partition",
                "Value": "Lag"
              }
            }
          }
        ]
      },
      {
        "id": 3,
        "title": "Total Consumer Lag",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "sum(kafka_consumer_lag_sum)",
            "legendFormat": "Total Lag"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1000, "color": "yellow"},
                {"value": 10000, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Consumer Groups",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 8},
        "targets": [
          {
            "expr": "count(kafka_consumer_lag_sum) by (consumer_group)",
            "legendFormat": "Groups"
          }
        ]
      },
      {
        "id": 5,
        "title": "Consumer Lag Rate of Change",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "deriv(kafka_consumer_lag_sum[5m])",
            "legendFormat": "{{consumer_group}} - {{topic}}"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Lag/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "Consumer Lag by Consumer Group",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "sum(kafka_consumer_lag_sum) by (consumer_group)",
            "legendFormat": "{{consumer_group}}"
          }
        ]
      },
      {
        "id": 7,
        "title": "Max Lag Across All Consumers",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "max(kafka_consumer_lag)",
            "legendFormat": "Max Lag"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1000, "color": "yellow"},
                {"value": 10000, "color": "orange"},
                {"value": 100000, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Average Lag",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 24},
        "targets": [
          {
            "expr": "avg(kafka_consumer_lag)",
            "legendFormat": "Avg Lag"
          }
        ]
      },
      {
        "id": 9,
        "title": "Consumer Offset vs Log End Offset",
        "type": "graph",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 28},
        "targets": [
          {
            "expr": "kafka_consumer_current_offset",
            "legendFormat": "Current Offset - {{consumer_group}} - {{topic}} - {{partition}}"
          },
          {
            "expr": "kafka_consumer_log_end_offset",
            "legendFormat": "Log End Offset - {{consumer_group}} - {{topic}} - {{partition}}"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Offset"},
          {"format": "short"}
        ]
      }
    ]
  }
}

